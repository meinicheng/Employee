<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/r1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <include
        android:id="@+id/main_title"
        layout="@layout/slidingmenu_above_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/showLyaout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/activiy_main_page_weahter_bg_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/weather_rain" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/activiy_main_iv_work_stats"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/workoff" />

                        <TextView
                            android:id="@+id/activiy_main_tv_work_stats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/worked"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/activiy_main_tv_weather_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="阴"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/activiy_main_tv_weather_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="重庆"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/layoutPlace"
                        android:layout_marginLeft="20dp" >

                        <TextView
                            android:id="@+id/activiy_main_tv_weather_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7°C"
                            android:textColor="@color/white"
                            android:textSize="50sp" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/activiy_main_lay_info"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/home_btn1_bg_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <!--
                             <ImageView
                            android:id="@+id/imgStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_ziliao" />
                        -->

                        <TextView
                            android:id="@+id/activiy_main_tv_work_stats_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下班"
                            android:textColor="@color/yellow"
                            android:textSize="30sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/vline" />

                    <LinearLayout
                        android:id="@+id/activiy_main_lay_order_action"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/home_btn2_bg_selector"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imgTool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_saomiao" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/activiy_main_tv_happy_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/happy_moment"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/activiy_main_tvJoke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/happy_moment_msg"
                        android:textColor="#919598"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/activiy_main_tv_next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:gravity="right"
                        android:text="@string/next_article"
                        android:textColor="#7f4d04"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>