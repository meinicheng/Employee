<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_view_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center">

            <ListView
                android:id="@+id/activity_action_base_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:divider="@null"
                android:dividerHeight="15dp"
                android:scrollbars="none"></ListView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:orientation="horizontal">
            <!--android:background="@drawable/bt_bg_red"-->
            <Button
                android:id="@+id/activity_action_base_report_add_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bt_bg_red"
                android:text="@string/accident_report"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:visibility="gone" />
            <!--android:visibility="gone"-->
            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.1"
       />
            <Button
                android:id="@+id/activity_action_base_report_third_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/green_btn_selector"
                android:text="@string/third_scan"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:visibility="gone" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>