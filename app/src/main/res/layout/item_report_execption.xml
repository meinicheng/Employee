<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/report_kuang2"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/item_report_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#4b4b4b"
        android:textSize="17sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/report_kuang2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/theme_colon"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/item_report_theme_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/please_input_title"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="#C0C0C0"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="@string/date_time_colon"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_report_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/report_kuang1"
        android:hint="20151109"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="@string/accident_explain_colon"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/item_report_explain_msg_edit"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="top"
        android:hint="@string/please_explain_msg"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="@string/add_pic_colon"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/item_report_img1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/report_add_img_selector"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/item_report_img2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/report_add_img_selector"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/item_report_img3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/report_add_img_selector"
                android:paddingRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/item_report_img4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/report_add_img_selector"
                android:paddingLeft="10dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>